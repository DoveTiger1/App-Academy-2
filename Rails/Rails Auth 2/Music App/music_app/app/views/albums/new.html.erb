<h1>Create a new Album for <%= @band.name %></h1>

<form action="<%= albums_url %>" method='post'>
    <%= auth_token %>

    <label for="name">Album Name:</label>
    <input type="text" name="album[name]" id="name">
    <br>

    <label for="year">Year:</label>
    <input type="number" name="album[year]" id="year">
    <br>

    <label for="band">Band:</label>
    <select name="album[band_id]" id="band">
        <% Band.all.each do |band| %>
            <option value="<%= band.id %>" <%= "selected" if band == @band %>><%= band.name %></option>
        <% end %>
    </select>
    <br>

    <br>
    Is the Album studio or live?
    <br>
    <label for="studio">Studio</label>
    <input type="radio" name="album[live]" id="studio" value='false' checked>
    <br>
    <label for="live">Live</label>
    <input type="radio" name="album[live]" id="live" value='true'>
    <br>
    <br>

    <input type="submit" value="Submit Album">
</form>

<a href="<%= band_url(@band) %>"><button>Cancel</button></a>